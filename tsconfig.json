{
    "compilerOptions": {
        "target": "es3",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "./compile",
        "removeComments": true,

        /* Strict Type-Checking Options */
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "allowJs": true,

        /* Module Resolution Options */
        "moduleResolution": "node",
        "lib": [
            "es2019",
            "DOM"
        ],
        "jsx": "react",
        "baseUrl": "./src",
        "paths": {
            "@api/*": ["api/*"],
            "@hooks": ["app/hooks"],
            "@assets/*": ["assets/*"],
            "@components/*": ["components/*"],
            "@lib/*": ["lib/*"],
            "@pages/*": ["pages/*"],
            "@services/*": ["services/*"],
            "@redux-actions": ["store/actions/index"],
            "@redux-selectors": ["store/selectors/index"],
            "@redux-store": ["store/index"],
            "@entityTypes/*": ["types/*"],
            "@utils/*": ["utils/*"],
        }
    },
    "include": [
        "./src/**/*",
        ".d.ts"
    ]
}
